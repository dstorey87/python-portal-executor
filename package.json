{
  "name": "@python-portal/executor",
  "version": "1.0.0",
  "description": "Secure Python code execution microservice with sandboxed environment and performance monitoring",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "dev": "concurrently \"tsc --watch\" \"nodemon dist/server.js\"",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "npm run lint && npm run type-check && npm run build && npm run test:unit",
    "test:unit": "jest",
    "test:security": "node scripts/security-tests.js",
    "prepublishOnly": "npm run test",
    "serve": "node dist/server.js",
    "docker:build": "docker build -t python-portal-executor .",
    "docker:run": "docker run -p 3002:3002 python-portal-executor"
  },
  "keywords": [
    "python",
    "code-execution",
    "sandbox",
    "security",
    "microservice",
    "docker",
    "education"
  ],
  "author": "dstorey87 <darren@pythonportal.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dstorey87/python-portal-executor.git"
  },
  "bugs": {
    "url": "https://github.com/dstorey87/python-portal-executor/issues"
  },
  "homepage": "https://github.com/dstorey87/python-portal-executor#readme",
  "dependencies": {
    "@python-portal/types": "^1.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/uuid": "^9.0.7",
    "@types/joi": "^17.2.3",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.8",
    "typescript": "^5.5.3",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "scripts/**/*",
    "Dockerfile",
    "docker-compose.yml",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}